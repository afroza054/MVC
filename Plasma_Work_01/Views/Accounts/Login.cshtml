@model Corona_Work_01.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm())
{
<div style="background-color:lightgreen; text-align:center">
    <h2>Login</h2>
    @Html.ValidationSummary()
    <div class="form-group row">
        @Html.LabelFor(x => x.Username, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Username, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">
        @Html.LabelFor(x => x.Password, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row">

        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary">Log in</button>
        </div>
    </div>
    @Html.ActionLink("Register Here", "Register", "Accounts")
</div>
    
}

@section scripts {

    <script src="~/Scripts/jquery.validate.js"></script>

    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>

}


