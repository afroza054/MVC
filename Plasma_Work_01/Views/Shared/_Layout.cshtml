<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/jquery-3.0.0.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" />
    @RenderSection("styles", false)
</head>
<body>
    <div class="navbar navbar-info bg-warning navbar-expand-md fixed-top border-bottom">
        <div class="container">
            <p>
                <img src="~/Pictures/1a.jpg" class="rounded-circle" width="80" />
            </p>
            @Html.ActionLink("Plasma Collection", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#nbar" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="navbar-collapse collapse" id="nbar">
                <ul class="nav navbar-nav">
                    <li class="nav-item"> @Html.ActionLink("Learn on Corona", "Index", "Ability", new { area = "" }, new { @class = "nav-link" })</li>

                    <li class="nav-item">@Html.ActionLink("Plasma Donation", "Index", "PlasmaDonations", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Corona Paitent", "Index", "CoronaPaitents", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item">@Html.ActionLink("Reasons For Unrecovered", "Index", "ReasonsUnrecovered", new { area = "" }, new { @class = "nav-link" })</li>
                    <li class="nav-item"> @Html.ActionLink("3 in 1", "Index", "CoronaPaitentAndReasons", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="nav-item">@Html.ActionLink("Logout", "Logout", "Accounts", new { }, new { @class = "nav-link" })</li>
                    }
                    else
                    {
                        <li class="nav-item">@Html.ActionLink("Register", "Register", "Accounts", new { }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Login", "Login", "Accounts", new { }, new { @class = "nav-link" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <section class="bg-image" style="background-image: url('../../Pictures/3a.jpg'); lighting-color:aqua;">
        <div class="container" style="min-height:450px">
            @RenderBody()
            <hr />

        </div>
        <footer>
            <p>&copy; @DateTime.Now.AddMonths(-8) - Save Someone's Life</p>
        </footer>
        </section>
        <script src="~/Scripts/bootstrap.js"></script>
        @RenderSection("scripts", false)
</body>
</html>