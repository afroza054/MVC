@model Plasma_Work_01.Models.ReasonsforNotRecoveredCoronaPaitent
@{
    ViewBag.Title = "Create";
}

@*<div id="messageDiv">

</div>*@

<div class="card" style="width: 50rem; background-color:lightpink; position:center;">

    <div class="card-body">

        <img src="~/Pictures/bg4.jpg" class="card-img-top" height="270" alt="Pic">

        <h4 class="card-title" style="text-align:center">Insert Reasons For Unrecovered Record</h4>
        @using (Html.BeginForm())
        {
            <div class="form-group row">
                @Html.LabelFor(x => x.DiseaseName, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.DiseaseName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.DiseaseName, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group row">
                @Html.LabelFor(x => x.ImproperPlasma, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.ImproperPlasma, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.ImproperPlasma, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.CriticalState, new { @class = "col-form-label col-2" })
                <div class="col-4">
                    @Html.TextBoxFor(x => x.CriticalState, new { @class = "form-control" })
                    @Html.ValidationMessageFor(x => x.CriticalState, null, new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(x => x.CoronaPositivePaitentId, new { @class = "col-control-label col-2 text-right" })
                <div class="col-4">
                    @Html.DropDownListFor(x => x.CoronaPositivePaitentId, new SelectList(ViewBag.CoronaPositivePaitents as IEnumerable<Plasma_Work_01.Models.CoronaPositivePaitent>, "CoronaPositivePaitentId", "PaitentName"), "--Select one--", new { @class = "form-control" })

                    @Html.ValidationMessageFor(x => x.CoronaPositivePaitentId, null, new { @class = "text-danger" })
                </div>

            </div>
            <div class="form-group row">

                <div class="col-4 offset-2">

                    <input type="submit" value="Save" class="btn btn-primary btn-sm" />
                    @*<span class="fa fa-spinner fa-plus fa-2x" id="spin" style="display:none"></span>*@

                </div>
            </div>

        }

    </div>
    @Html.ActionLink("Back to Reasons For Unrecovered Page", "Index")
</div>

@section styles{


    <link href="~/Content/font-awesome.css" rel="stylesheet" />
}
